{
  "name": "aggregation-repository-provider",
  "version": "0.0.0-semantic-release",
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": "./src/repository-provider.mjs"
  },
  "description": "aggregates several repository providers into one",
  "keywords": [
    "repository-provider"
  ],
  "contributors": [
    {
      "name": "Markus Felten",
      "email": "markus.felten@gmx.de"
    }
  ],
  "license": "BSD-2-Clause",
  "scripts": {
    "test": "npm run test:ava",
    "test:ava": "ava --timeout 4m tests/*-ava.mjs tests/*-ava-node.mjs",
    "cover": "c8 -x 'tests/**/*' --temp-directory build/tmp ava --timeout 4m tests/*-ava.mjs tests/*-ava-node.mjs && c8 report -r lcov -o build/coverage --temp-directory build/tmp",
    "docs": "documentation readme --section=API ./src/**/*.mjs",
    "lint": "npm run lint:docs",
    "lint:docs": "documentation lint ./src/**/*.mjs"
  },
  "dependencies": {
    "aggregate-async-iterator": "^1.1.16",
    "repository-provider": "^34.0.2"
  },
  "devDependencies": {
    "ava": "^6.0.0",
    "bitbucket-repository-provider": "^6.0.1",
    "c8": "^8.0.1",
    "documentation": "^14.0.2",
    "gitea-repository-provider": "^4.0.2",
    "github-repository-provider": "^8.0.29",
    "local-repository-provider": "^9.0.0",
    "mock-repository-provider": "^8.0.3",
    "repository-provider-test-support": "^3.0.1",
    "semantic-release": "^22.0.10"
  },
  "engines": {
    "node": ">=20.10.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/arlac77/aggregation-repository-provider"
  },
  "bugs": {
    "url": "https://github.com/arlac77/aggregation-repository-provider/issues"
  },
  "homepage": "https://github.com/arlac77/aggregation-repository-provider#readme",
  "template": {
    "inheritFrom": [
      "arlac77/template-arlac77-github",
      "arlac77/template-esm-only"
    ]
  }
}
