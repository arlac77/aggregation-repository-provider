{
  "name": "aggregation-repository-provider",
  "version": "0.0.0-semantic-release",
  "publishConfig": {
    "access": "public"
  },
  "sideEffects": false,
  "exports": {
    ".": "./src/repository-provider.mjs"
  },
  "description": "aggregates several repository providers into one",
  "keywords": [
    "repository-provider"
  ],
  "contributors": [
    {
      "name": "Markus Felten",
      "email": "markus.felten@gmx.de"
    }
  ],
  "license": "BSD-2-Clause",
  "scripts": {
    "test": "npm run test:ava",
    "test:ava": "ava --timeout 2m tests/*.mjs",
    "cover": "c8 -x 'tests/**/*' --temp-directory build/tmp ava --timeout 2m tests/*.mjs && c8 report -r lcov -o build/coverage --temp-directory build/tmp",
    "docs": "documentation readme --section=API ./src/**/*.mjs",
    "lint": "npm run lint:docs",
    "lint:docs": "documentation lint ./src/**/*.mjs"
  },
  "dependencies": {
    "aggregate-async-iterator": "^1.1.5",
    "repository-provider": "^25.2.1"
  },
  "devDependencies": {
    "ava": "^3.15.0",
    "bitbucket-repository-provider": "^3.8.1",
    "c8": "^7.7.1",
    "documentation": "^13.2.4",
    "gitea-repository-provider": "^1.16.1",
    "github-repository-provider": "^7.22.3",
    "local-repository-provider": "^7.0.80",
    "mock-repository-provider": "^5.5.65",
    "repository-provider-test-support": "^1.4.0",
    "semantic-release": "^17.4.2"
  },
  "engines": {
    "node": ">=14.16.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/arlac77/aggregation-repository-provider.git"
  },
  "bugs": {
    "url": "https://github.com/arlac77/aggregation-repository-provider/issues"
  },
  "homepage": "https://github.com/arlac77/aggregation-repository-provider#readme",
  "template": {
    "inheritFrom": [
      "arlac77/template-arlac77-github",
      "arlac77/template-esm-only"
    ]
  }
}
