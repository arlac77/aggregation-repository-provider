{
  "name": "aggregation-repository-provider",
  "version": "0.0.0-semantic-release",
  "publishConfig": {
    "access": "public"
  },
  "main": "dist/repository-provider.js",
  "module": "src/repository-provider.js",
  "description": "aggregates several repository providers into one",
  "keywords": [
    "repository-provider"
  ],
  "contributors": [
    {
      "name": "Markus Felten",
      "email": "markus.felten@gmx.de"
    }
  ],
  "license": "BSD-2-Clause",
  "scripts": {
    "cover": "c8 --temp-directory build/coverage ava && c8 report -r lcov --temp-directory build/coverage",
    "docs": "documentation readme src/repository-provider.js --section=API",
    "lint": "documentation lint src/repository-provider.js",
    "posttest": "npm run prepare && markdown-doctest",
    "prepare": "rollup -c",
    "test": "ava"
  },
  "dependencies": {
    "repository-provider": "^10.0.0"
  },
  "devDependencies": {
    "ava": "^1.0.1",
    "bitbucket-repository-provider": "^2.1.3",
    "c8": "^3.2.1",
    "documentation": "^9.1.1",
    "esm": "^3.0.84",
    "github-repository-provider": "^5.1.15",
    "local-repository-provider": "^4.0.15",
    "markdown-doctest": "^0.9.1",
    "rollup": "^1.0.0",
    "rollup-plugin-cleanup": "^3.1.0",
    "rollup-plugin-commonjs": "^9.2.0",
    "rollup-plugin-executable": "^1.3.0",
    "rollup-plugin-json": "^3.1.0",
    "rollup-plugin-node-resolve": "^4.0.0",
    "semantic-release": "^15.13.2"
  },
  "engines": {
    "node": ">=10.15.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/arlac77/aggregation-repository-provider.git"
  },
  "bugs": {
    "url": "https://github.com/arlac77/aggregation-repository-provider/issues"
  },
  "homepage": "https://github.com/arlac77/aggregation-repository-provider#readme",
  "ava": {
    "files": [
      "tests/*-test.js",
      "tests/*-test.mjs"
    ],
    "require": [
      "esm"
    ],
    "babel": false,
    "compileEnhancements": false,
    "extensions": [
      "js",
      "mjs"
    ]
  },
  "template": {
    "repository": {
      "url": "https://github.com/arlac77/npm-package-template.git"
    }
  }
}
