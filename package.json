{
  "name": "aggregation-repository-provider",
  "version": "0.0.0-semantic-release",
  "publishConfig": {
    "access": "public"
  },
  "sideEffects": false,
  "type": "module",
  "main": "./src/repository-provider.mjs",
  "exports": {
    ".": "./src/repository-provider.mjs"
  },
  "description": "aggregates several repository providers into one",
  "keywords": [
    "repository-provider"
  ],
  "contributors": [
    {
      "name": "Markus Felten",
      "email": "markus.felten@gmx.de"
    }
  ],
  "license": "BSD-2-Clause",
  "scripts": {
    "test": "ava --timeout 2m",
    "cover": "c8 -x 'tests/**/*' --temp-directory build/tmp ava --timeout 2m && c8 report -r lcov -o build/coverage --temp-directory build/tmp",
    "docs": "documentation readme ./src/repository-provider.mjs --section=API",
    "lint": "documentation lint ./src/repository-provider.mjs"
  },
  "dependencies": {
    "repository-provider": "^19.1.0"
  },
  "devDependencies": {
    "ava": "^3.8.2",
    "bitbucket-repository-provider": "^3.5.33",
    "c8": "^7.1.2",
    "documentation": "^13.0.0",
    "gitea-repository-provider": "^1.10.29",
    "github-repository-provider": "^7.9.29",
    "local-repository-provider": "^6.5.40",
    "repository-provider-test-support": "github:arlac77/repository-provider-test-support",
    "semantic-release": "^17.0.8"
  },
  "engines": {
    "node": ">=12.16.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/arlac77/aggregation-repository-provider.git"
  },
  "bugs": {
    "url": "https://github.com/arlac77/aggregation-repository-provider/issues"
  },
  "homepage": "https://github.com/arlac77/aggregation-repository-provider#readme",
  "template": {
    "inheritFrom": [
      "arlac77/template-arlac77-github",
      "arlac77/template-esm-only"
    ]
  }
}
