{
  "name": "aggregation-repository-provider",
  "version": "0.0.0-semantic-release",
  "publishConfig": {
    "access": "public"
  },
  "sideEffects": false,
  "type": "module",
  "main": "src/repository-provider.mjs",
  "module": "src/repository-provider.mjs",
  "description": "aggregates several repository providers into one",
  "keywords": [
    "repository-provider"
  ],
  "contributors": [
    {
      "name": "Markus Felten",
      "email": "markus.felten@gmx.de"
    }
  ],
  "license": "BSD-2-Clause",
  "scripts": {
    "cover": "c8 -x 'tests/**/*' --temp-directory build/tmp ava && c8 report -r lcov -o build/coverage --temp-directory build/tmp",
    "docs": "documentation readme src/repository-provider.mjs --section=API",
    "lint": "documentation lint src/repository-provider.mjs",
    "posttest": "npm run prepare && markdown-doctest",
    "test": "ava",
    "prepare": "rollup -c"
  },
  "dependencies": {
    "repository-provider": "^16.10.3"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^11.0.1",
    "@rollup/plugin-json": "^4.0.1",
    "@rollup/plugin-node-resolve": "^7.0.0",
    "ava": "^2.4.0",
    "bitbucket-repository-provider": "^3.3.38",
    "builtin-modules": "^3.1.0",
    "c8": "^7.0.1",
    "documentation": "^12.1.4",
    "esm": "^3.2.25",
    "gitea-repository-provider": "^1.9.7",
    "github-repository-provider": "^7.5.1",
    "local-repository-provider": "^6.5.2",
    "markdown-doctest": "^1.0.0",
    "repository-provider-test-support": "github:arlac77/repository-provider-test-support",
    "rollup": "^1.29.0",
    "rollup-plugin-cleanup": "^3.1.1",
    "rollup-plugin-executable": "^1.5.2",
    "semantic-release": "^16.0.1"
  },
  "engines": {
    "node": ">=12.14.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/arlac77/aggregation-repository-provider.git"
  },
  "bugs": {
    "url": "https://github.com/arlac77/aggregation-repository-provider/issues"
  },
  "homepage": "https://github.com/arlac77/aggregation-repository-provider#readme",
  "ava": {
    "files": [
      "tests/*-test.mjs"
    ],
    "require": [
      "esm"
    ],
    "babel": false,
    "compileEnhancements": false,
    "extensions": [
      "mjs"
    ]
  },
  "template": {
    "repository": {
      "url": "https://github.com/arlac77/npm-package-template.git"
    }
  }
}
