{
  "name": "aggregation-repository-provider",
  "version": "0.0.0-semantic-release",
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "packageManager": "npm@11.6.0+sha512.77f3fb0dbbd881835d7bd1217deabdf7ed77fc4ec4f363df64fc3cb986404abf6c437661041080f5c5d225103508e7c9ea30cb2742b7e942675d05a10af2d7b9",
  "types": "./types/repository-provider.d.mts",
  "exports": {
    ".": {
      "types": "./types/repository-provider.d.mts",
      "default": "./src/repository-provider.mjs"
    }
  },
  "description": "aggregates several repository providers into one",
  "keywords": [
    "repository-provider"
  ],
  "contributors": [
    {
      "name": "Markus Felten",
      "email": "markus.felten@gmx.de"
    }
  ],
  "license": "0BSD",
  "scripts": {
    "test": "node --run test:ava",
    "test:ava": "ava --timeout 4m tests/*-ava.mjs tests/*-ava-node.mjs",
    "cover": "c8 -x 'tests/**/*' --temp-directory build/tmp ava --timeout 4m tests/*-ava.mjs tests/*-ava-node.mjs && c8 report -r lcov -o build/coverage --temp-directory build/tmp",
    "docs": "documentation readme --section=API ./src**/*.mjs",
    "lint": "node --run lint:docs",
    "lint:docs": "documentation lint ./src**/*.mjs"
  },
  "dependencies": {
    "aggregate-async-iterator": "^1.2.2",
    "content-entry": "^14.2.4",
    "repository-provider": "^35.5.16"
  },
  "devDependencies": {
    "@types/node": "^24.3.1",
    "ava": "^6.4.1",
    "bitbucket-repository-provider": "^6.2.10",
    "c8": "^10.1.3",
    "documentation": "^14.0.3",
    "gitea-repository-provider": "^4.3.9",
    "github-repository-provider": "^9.2.31",
    "local-repository-provider": "^9.1.16",
    "mock-repository-provider": "^8.3.31",
    "repository-provider-test-support": "^3.1.52",
    "semantic-release": "^24.2.7"
  },
  "engines": {
    "node": ">=22.18.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/arlac77/aggregation-repository-provider.git"
  },
  "bugs": {
    "url": "https://github.com/arlac77/aggregation-repository-provider/issues"
  },
  "homepage": "https://github.com/arlac77/aggregation-repository-provider#readme",
  "template": {
    "inheritFrom": [
      "arlac77/template-arlac77-github",
      "arlac77/template-javascript-component"
    ]
  }
}
